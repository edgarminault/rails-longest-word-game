<h2>Check New Page</h2>

<div class="cards">
  <% @array.each do |letter| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
      <%=  letter.capitalize %>
    </div>
  <% end %>
</div>

<form novalidate="novalidate" class="simple_form search" action="/result" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
  <input class="form-control string required" type="text" name="word" id="search_query" />
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :array, @array %>
  <%= hidden_field_tag :start, @start %>
  <button name="button" type="submit" class="btn btn-flat">
    <i class="fas fa-search"></i> Submit
  </button>
</form>


